{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	- Produits
{% endblock %}

{% block body %}
	<div>
		<h1>
			<a href="{{ path('app_product_add') }}">
				<span class="badge bg-info">Ajouter un produit</span>
			</a>
		</h1>
	</div>
	<div class="text-center">
		<h1>Liste des produits</h1>
	</div>


	<div class="container mt-5 mb-3">
		<div class="row">

			{% for product in products %}
				<div class="col-12 text-center mb-3">
					<div>
						<h1>
							<a href="{{ path('app_product_read', {id: product.id}) }}">
								<span class="badge bg-info">{{ product.name }}</span>
							</a>
						</h1>
					</div>
					

				</div>
				<div class="row text-center">

					<div class="col-12 col-md-6">
						<p>
							ID :
							{{ product.id }}
						</p>

						<p>
							Date :
							{{ product.createdAt | date('d/m/Y') }}
						</p>
						<p>
							Date :
							{{ product.price }}
						</p>
						
						<p>
							Brand :
							{{ product.brand.name | capitalize }}
						</p>
					</div>
					<div class="col-12 col-md-6">

						<p>
							Créé le :
							{{ product.createdAt|date('d/m/Y') }}
						</p>
						{% if product.updatedAt %}
							<p>
								Dernière mise à jour le :
								{{ product.updatedAt|date('d/m/Y') }}
							</p>
						{% endif %}
						<p>Status :
							{{product.status}}
						</p>

					</div>
				</div>

			{% endfor %}

		</div>

		<div class="navigation">
			{{ knp_pagination_render(products) }}
		</div>
	</div>


{% endblock %}
