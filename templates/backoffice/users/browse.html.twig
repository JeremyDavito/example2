{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	- Utilisateurs
{% endblock %}

{% block body %}
	<div>
		<h1 class="text-center">Liste des utilisateurs</h1>
	</div>

	<div class="container mt-5 mb-3">
		<div class="row">
			{% for user in users %}
				<div>
					<a href="{{ path('app_user_read', {id: user.id}) }}">
						<div class="col-sm-6 col-md-4 col-xl-3 d-flex align-items-stretch">
							<div class="card p-3 mb-2 bg-light shadow text-primary">
								<div>
									<div class="text-center">
										<h5 class="heading text-center">ID :
											{{ user.id }}</h5>
										<p class="lead">Email :
											{{ user.email }}</p>
										<div>
											{{ user.roles ? user.roles | json_encode : '' }}
										</div>
									</div>
									<div class="mt-5">
										<div class="mt-3 row justify-content-between text-center">
											<i class="fa fa-key-modern" aria-hidden="true"></i>
										</a>

										{% if app.user == user %}
											<a class="btn btn-warning" href="#" data-bs-toggle="tooltip" data-bs-placement="top" title="Modifier">
												<i class="fa fa-pencil-square-o" aria-hidden="true"></i>
											</a>
										{% endif %}
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</a>

		{% endfor %}

	</div>

	<div class="navigation">
		{{ knp_pagination_render(users) }}
	</div>
</div>{% endblock %}
